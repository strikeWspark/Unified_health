<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/login_gradient">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:layout_margin="35dp"
            android:src="@drawable/splash"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/uh_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp"

            android:background="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/uh_username_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:hint="@string/hint_username"
                android:padding="8dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/uh_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_margin="12dp"
            android:hint="@string/hint_password"
            android:padding="8dp"
            android:background="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/uh_password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_margin="12dp"
                android:padding="8dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/uh_aadhar_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_margin="12dp"
            android:hint="@string/uh_aadhar"
            android:padding="8dp"
            android:background="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/uh_aadhar_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="12"
                android:layout_margin="12dp"
                android:padding="8dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/uh_next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/u_next"
                android:layout_alignParentRight="true"
                android:layout_margin="12dp"
                android:padding="4dp"
                app:cornerRadius="26dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/uh_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uh_cancel"
                android:layout_toStartOf="@+id/uh_next_button"
                android:layout_margin="12dp"
                android:padding="4dp"
                app:cornerRadius="26dp"/>

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/uh_signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/uh_signup"
            app:cornerRadius="36dp"
            android:layout_marginTop="88dp"/>


    </LinearLayout>


</ScrollView>