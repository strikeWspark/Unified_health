<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@drawable/signup_gradient">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/uh_signup_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/app_name"
                android:background="@android:color/transparent"/>
        </com.google.android.material.appbar.AppBarLayout>
        
        
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/uh_profilepic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/cardview_dark_background"
            android:layout_marginTop="55dp"
            android:padding="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/uh_signup_aadhar_no_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/uh_signup_aadhar_no_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/uh_aadhar"
                android:inputType="number"
                android:maxLength="12"
                android:layout_margin="12dp"
                android:padding="8dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/uh_signup_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/uh_signup_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/uh_name"
                android:layout_margin="12dp"
                android:padding="8dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/uh_signup_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/uh_signup_username_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_username"
                android:layout_margin="12dp"
                android:padding="8dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/uh_signup_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/uh_signup_password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:layout_margin="12dp"
                android:padding="8dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/uh_signup_age_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/uh_signup_age_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/uh_age"
                android:layout_margin="12dp"
                android:padding="8dp"
                android:inputType="number"
                android:maxLength="3"/>
        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/uh_male"
                android:text="Male"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:padding="4dp"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/uh_female"
                android:text="Female"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:padding="4dp"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/uh_others"
                android:text="Others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="12dp"
                android:padding="4dp"/>
        </RadioGroup>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/uh_signup_mobile_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/uh_signup_mobile_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/uh_mobile"
                android:layout_margin="12dp"
                android:padding="8dp"
                android:maxLength="10"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/uh_signup_town_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/uh_signup_town_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/uh_town"
                android:layout_margin="12dp"
                android:padding="8dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/uh_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uh_signup"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>